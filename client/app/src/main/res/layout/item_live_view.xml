<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/dummy_img" />

            <RelativeLayout
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:background="@drawable/trans_top"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/segoe_ui_regural"
                    android:text="1.1 km"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="78dp" />

                <ImageView
                    android:id="@+id/live_status"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_circle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="78dp"
                    app:tint="@color/green" />

                <LinearLayout
                    android:padding="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/download_btn"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/_5sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_views_line" />

                    <TextView
                        android:id="@+id/download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/segoe_ui_regural"
                        android:text="4.4K"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_8sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="78dp" />
                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:background="@drawable/trans_bottom"
                android:id="@+id/des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ly_1"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:fontFamily="@font/segoe_ui_regural"
                android:maxLength="20"
                android:maxLines="2"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:text="#goindiago"
                android:textColor="@color/exo_white"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
