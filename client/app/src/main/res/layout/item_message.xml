<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/_50sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@color/grey"
            app:civ_border_color="@color/grey"
            app:civ_border_width="@dimen/_2sdp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toEndOf="@id/user_image"
            android:background="@drawable/menu_background"
            android:padding="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/ly_t"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/more_option_btn"
                    android:layout_toEndOf="@+id/back_btn"
                    android:layout_weight="1"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:text="Udit Sharma"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/timeing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/more_option_btn"
                    android:layout_toEndOf="@+id/back_btn"
                    android:layout_weight="1"
                    android:fontFamily="@font/segoe_ui_regural"
                    android:gravity="end"
                    android:text="15 min"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <TextView
                android:id="@+id/user_pref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly_t"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:fontFamily="@font/segoe_ui_regural"
                android:maxLines="1"
                android:text="sear dshjfksjdf  some many messkjsahfksjkhsdjfhhsa kjsafdh kjafjk jkshdfjasf "
                android:textColor="@color/exo_white"
                android:textSize="@dimen/_10sdp" />


        </RelativeLayout>

    </RelativeLayout>
</layout>
