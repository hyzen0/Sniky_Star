<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_round_trans">


            <ImageView
                android:id="@+id/clear_filter"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_8sdp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-medium"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_close"
                app:tint="@color/grey" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blacktrans"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_20sdp">

            <TextView
                android:id="@+id/filter_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:fontFamily="@font/segoe_ui_bold"
                android:gravity="center"
                android:text="Let Us know what's wrong with this post"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_14sdp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/spam_misleading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/ic_edit_text_back"
                android:fontFamily="@font/seguisb"
                android:gravity="center"
                android:lines="4"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:textColor="@color/exo_white"
                android:textSize="@dimen/_12sdp" />

            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/login_btn"
                android:layout_width="158dp"
                android:layout_height="39dp"
                android:background="@drawable/ic_button_back"
                android:text="@string/submit"
                android:textColor="@color/yellow"
                android:layout_marginVertical="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
              />

        </LinearLayout>


    </LinearLayout>
</layout>