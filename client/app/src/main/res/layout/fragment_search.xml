<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        tools:context=".Fragment.message.fragment.MessageFragment">

        <RelativeLayout
            android:id="@+id/action_bar_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:transitionName="logoTrans"

                app:srcCompat="@drawable/ic_logo" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/menu_btn"
                android:layout_toEndOf="@+id/imageView5"
                android:gravity="center_horizontal"
                android:orientation="horizontal"

                app:layout_constraintEnd_toStartOf="@+id/menu_btn"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/follow_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_1sdp"
                    android:text="@string/search"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="78dp" />


            </LinearLayout>

            <ImageButton
                android:id="@+id/menu_btn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="menu"
                android:focusable="true"
                android:src="@drawable/ic_menu_button"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/user_name_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/ic_edit_text_back"
            app:endIconDrawable="@drawable/ic_product_icons">

            <EditText
                android:id="@+id/search_txt"
                style="@style/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toStartOf="@+id/icon_search"
                android:background="@android:color/transparent"
                android:editable="false"
                android:focusable="false"
                android:hint="Search Users,Hashtags,Songs"
                android:inputType="text" />

            <ImageView
                android:id="@+id/icon_search"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_product_icons" />

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_recent_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/ripple_round"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/segoe_ui_regural"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_1sdp"
                        android:text="@string/recent_search"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="78dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipsGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        app:chipSpacingVertical="0dp"
                        app:itemSpacing="@dimen/_5sdp"
                        app:singleSelection="false">

                    </com.google.android.material.chip.ChipGroup>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/ripple_round"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/segoe_ui_regural"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_1sdp"
                        android:text="@string/users"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="78dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_5sdp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="10"
                        tools:listitem="@layout/item_user" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_trending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/ripple_round"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/segoe_ui_regural"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_1sdp"
                        android:text="@string/trending"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="78dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_trending"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:clipToPadding="false"
                        android:orientation="horizontal"

                        android:paddingHorizontal="@dimen/_5sdp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="10"
                        tools:listitem="@layout/item_trending" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_music"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/ripple_round"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/segoe_ui_regural"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_1sdp"
                        android:text="@string/music"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="78dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_music"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_5sdp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="10"
                        tools:listitem="@layout/item_user" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_hashtag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/ripple_round"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/segoe_ui_regural"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_1sdp"
                        android:text="@string/hashtags"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="78dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_hashtags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_5sdp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="10"
                        tools:listitem="@layout/item_user" />

                </LinearLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </LinearLayout>
</layout>