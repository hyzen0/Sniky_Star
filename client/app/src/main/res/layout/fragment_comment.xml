<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/all_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">


        <LinearLayout
            android:id="@id/ly_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_2sdp"
            android:transitionName="TransAllLayout">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ly_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/song_img"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/user_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@drawable/ripple_round"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="0dp"
                            android:paddingEnd="@dimen/_5sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/circleImageView2"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_music"
                                android:transitionName="userImage"
                                app:civ_border_color="@color/grey"
                                app:civ_border_width="1dp"
                                app:civ_circle_background_color="@color/grey" />

                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/segoe_ui_bold"
                                android:text="Udit Sharma"
                                android:textColor="@color/yellow"
                                android:textSize="@dimen/_11sdp"
                                android:transitionName="TranUserName" />
                        </LinearLayout>


                        <RelativeLayout
                            android:id="@+id/add_follow_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_toEndOf="@+id/user_profile"
                            android:background="@drawable/ic_button_back"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/user_profile"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.517">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_marginVertical="@dimen/_2sdp"
                                android:background="@drawable/ic_button_back"
                                android:fontFamily="@font/segoe_ui_regural"
                                android:text="+ Follow"
                                android:textAlignment="center"
                                android:textColor="@color/yellow"
                                android:textSize="@dimen/_10sdp" />


                        </RelativeLayout>


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/user_dec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/show_less_dec_btn"
                            android:fontFamily="@font/segoe_ui_regural"
                            android:text="hete sime thindgd deis s wlil dsirel ete sime thindgd deis s wlil dsirel"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/show_less_dec_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/user_dec"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@drawable/ripple_round"
                            android:fontFamily="@font/segoe_ui_bold"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:text="@string/more"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/song_name"
                        android:layout_width="322dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/segoe_ui_regural"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="Single-line text view that scrolls automatically if the text is too long to fit in the widget"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/more_vert_option"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_above="@+id/song_img"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:adjustViewBounds="true"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:contentDescription="more_option"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_more_vert"
                    android:tint="@color/grey" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/song_img"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignBottom="@id/ly_1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_caset" />


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:id="@+id/likes_ly"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/like_btn"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/_2sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_star_line" />

                    <TextView
                        android:id="@+id/likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/segoe_ui_regural"
                        android:text="4.4K"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_11sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="78dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comment_ly"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/comments_btn"
                        android:layout_width="@dimen/_25sdp"

                        android:layout_height="@dimen/_25sdp"
                        android:adjustViewBounds="true"

                        android:background="@android:color/transparent"
                        android:padding="@dimen/_2sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_comment_line" />

                    <TextView
                        android:id="@+id/comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/segoe_ui_regural"
                        android:text="1K"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_11sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="78dp" />
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/views_ly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"

                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/download_btn"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"

                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/_2sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_views_line" />

                    <TextView
                        android:id="@+id/download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/segoe_ui_regural"
                        android:text="4.4K"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_11sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="78dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/share_ly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/share_btn"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/_2sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_share_line" />

                    <TextView
                        android:id="@+id/shares"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/segoe_ui_regural"
                        android:text="100"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_11sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="78dp" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_2"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_2sdp"
            android:weightSum="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:id="@+id/view_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/grey" />

            <View
                android:id="@+id/view_2"

                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/yellow" />

            <View
                android:id="@+id/view_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/grey" />

            <View
                android:id="@+id/view_4"

                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/grey" />

        </LinearLayout>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/linearLayout3"
            android:orientation="vertical" />

    </RelativeLayout>
</layout>