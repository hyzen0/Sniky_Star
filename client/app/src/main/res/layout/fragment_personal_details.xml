<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragment.auth.PersonalFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/layout_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_8sdp"
                        android:visibility="gone">

                        <ImageButton
                            android:id="@+id/back_btn"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:background="?android:selectableItemBackgroundBorderless"
                            android:padding="@dimen/_2sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_arrow_back"
                            android:tint="@color/yellow" />


                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/ly_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/titile1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:fontFamily="@font/seguisb"
                            android:text="Personal Details"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/yellow"
                            android:textSize="@dimen/_20sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:orientation="horizontal"
                            android:weightSum="3">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/add_photo"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_90sdp"
                                android:src="@drawable/ic_add_photo"
                                app:civ_border_color="@color/grey"
                                app:civ_border_overlay="true"
                                app:civ_border_width="2dp"
                                app:civ_circle_background_color="@color/colorPrimaryDark" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:orientation="vertical">


                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/user_name_ly"
                                    style="@style/edit_text_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/name">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/user_name"
                                        style="@style/edit_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:inputType="text" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/user_id_ly"
                                    style="@style/edit_text_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:hint="@string/user_id">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/user_id"
                                        style="@style/edit_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:inputType="text" />

                                </com.google.android.material.textfield.TextInputLayout>


                            </LinearLayout>


                        </LinearLayout>

                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/toggleGroup2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_39sdp"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="visible"
                            android:weightSum="3"
                            app:checkedButton="@+id/female_btn"
                            app:selectionRequired="true"
                            app:singleSelection="true"
                            tools:targetApi="lollipop">


                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/female_btn"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/seguisb"
                                android:includeFontPadding="false"
                                android:text="@string/female"
                                android:textAllCaps="false"
                                android:textColor="@color/yellow"
                                android:textSize="@dimen/_12sdp"
                                app:cornerRadius="@dimen/_15sdp"
                                app:strokeWidth="2dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/male_btn"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/seguisb"

                                android:includeFontPadding="false"
                                android:text="@string/male"
                                android:textAllCaps="false"

                                android:textSize="@dimen/_12sdp"
                                app:strokeWidth="2dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/other_btn"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/seguisb"
                                android:includeFontPadding="false"
                                android:text="@string/other"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_12sdp"
                                app:cornerRadius="@dimen/_15sdp"
                                app:strokeWidth="2dp" />


                        </com.google.android.material.button.MaterialButtonToggleGroup>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/pref_ly"
                            style="@style/edit_text_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:hint="@string/profession">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/prefer"
                                style="@style/edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/biography_ly"
                            style="@style/edit_text_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:hint="@string/biography"
                            app:counterEnabled="true"
                            app:counterMaxLength="250">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/biography"
                                style="@style/edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="top|start"
                                android:inputType="textMultiLine"
                                android:lines="5"
                                android:maxLength="250" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/phone_number_ly"
                            style="@style/edit_text_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:hint="@string/phone_number"
                            app:prefixText="+91 "
                            app:prefixTextColor="@color/yellow">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/phone_number"
                                style="@style/edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="phone" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/email_address_ly"
                            style="@style/edit_text_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:hint="@string/email_address">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/email_address"
                                style="@style/edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textEmailAddress" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <Button
                            android:id="@+id/login_btn"
                            android:layout_width="158dp"
                            android:layout_height="39dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@drawable/ic_button_back"
                            android:gravity="center"
                            android:text="@string/submit"
                            android:textColor="@color/yellow"
                            android:textSize="@dimen/_14sdp" />


                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ly">

                    <TextView
                        android:id="@+id/term_con"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/seguisb"
                        android:gravity="bottom"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:text="@string/term_con"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_8sdp"
                        android:transitionName="termCon" />
                </RelativeLayout>

            </RelativeLayout>


        </ScrollView>


    </RelativeLayout>
</layout>
