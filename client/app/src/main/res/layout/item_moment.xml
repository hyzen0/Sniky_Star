<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/ic_edit_text_back"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@drawable/ripple_round"

                android:id="@+id/user_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageView2"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_music"
                        android:transitionName="userImage"
                        app:civ_border_color="@color/grey"
                        app:civ_border_width="1dp"
                        app:civ_circle_background_color="@color/grey" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/segoe_ui_bold"
                            android:text="Udit Sharma"
                            android:textColor="@color/yellow"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/moment_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/seguisb"
                            android:text="15 mint ago"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/more_vert_option"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:contentDescription="more_option"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_more_vert"
                    android:tint="@color/grey" />


            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:scaleType="centerCrop"
                android:id="@+id/moment_img"
                android:src="@drawable/dummy_moment" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/dec_moment"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/show_less_dec_btn"
                    android:fontFamily="@font/segoe_ui_regural"
                    android:text="hete sime thindgd deis s wlil dsirel ete sime thindgd deis s wlil dsirel"
                    android:textColor="@color/grey_600"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/show_less_dec_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/user_dec"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="bottom"
                    android:paddingVertical="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/ripple_round"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:text="@string/more"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_10sdp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/like_btn"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:padding="@dimen/_2sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_star_line" />

                    <TextView
                        android:id="@+id/likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/segoe_ui_regural"
                        android:text="4.4K"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_9sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="78dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/comments_btn"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:padding="@dimen/_2sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_comment_line" />

                    <TextView
                        android:id="@+id/comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/segoe_ui_regural"
                        android:text="1K"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_9sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="78dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/download_btn"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"

                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:padding="@dimen/_2sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_views_line" />

                    <TextView
                        android:id="@+id/download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/segoe_ui_regural"
                        android:text="4.4K"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_9sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="78dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/share_btn"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:padding="@dimen/_2sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_share_line" />

                    <TextView
                        android:id="@+id/shares"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/segoe_ui_regural"
                        android:text="100"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_9sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="78dp" />
                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/comment_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/ic_edit_with_trans_back"
                android:visibility="gone">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_img"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:src="@drawable/ic_music"
                    app:civ_border_color="@color/grey"
                    app:civ_border_width="1dp"
                    app:civ_circle_background_color="@color/grey" />


                <EditText
                    android:id="@+id/comment_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/send_btn"
                    android:layout_toEndOf="@+id/user_img"
                    android:background="@android:color/transparent"
                    android:hint="@string/comment_as_udit"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/_10sdp" />

                <ImageButton
                    android:id="@+id/send_btn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:adjustViewBounds="true"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_send_btn" />

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</layout>
